<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.smartinc.parkinsonapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartProgramActivity"
            android:label="@string/StartProgramActivityLabel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CorrectProgramActivity"
            android:label="@string/CorrectProgramActivityLabel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExerListActivity"
            android:label="@string/ExerListActivityLabel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExerCardWelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExerCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FinishActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultsActivity"
            android:label="@string/ResultsActivityLabel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/SettingsActivityLabel"
            android:screenOrientation="portrait" />
    </application>

</manifest>